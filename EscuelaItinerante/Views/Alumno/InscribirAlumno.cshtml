@model EscuelaItinerante.Models.InscribirAlumnoViewModel
@{
    ViewBag.Title = "Inscripción de alumno";
}
<h2>@ViewBag.Title.</h2>
@*<h4 class="text-success">@ViewBag.Message</h4>*@

<div class="container">
    @if (Model.Alumno == null)
    {
        using (Html.BeginForm("InscribirAlumno", "Alumno", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="col-md-6 col-lg-offset-3 well">
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>

                <h4>Ingrese la sede a la que va a inscribir al alumno.</h4>
                <div>
                    @Html.DropDownListFor(x => x.Sede, Model.Sedes, new { @class = "form-control" })
                </div>

                <h4 class="mt20">Ingrese el DNI del alumno que desea inscribir.</h4>
                <div>
                    @Html.TextBoxFor(x => x.NroDocumento, new { @class = "form-control", @placeholder = "Nro. Documento", @Value = Model.NroDocumento == 0 ? "" : Model.NroDocumento.ToString() })
                </div>
                <div class="mt20 text-right">
                    <input type="submit" name="name" class="btn btn-success" value="Buscar" />
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-md-4 col-md-offset-4">
            <table border="1" class="p5">
                <tr>
                    <td>Nombre de alumno:</td>
                    <td>@Model.Alumno.Nombre @Model.Alumno.Apellido.</td>
                </tr>
                <tr>
                    <td>Nro. de documento:</td>
                    <td>@string.Format("{0:n0}", Model.Alumno.NroDocumento)</td>
                </tr>
                <tr>
                    <td>Fecha de Inscripción:</td>
                    <td>@Model.Alumno.FechaIngreso hs.</td>
                </tr>
                <tr>
                    <td>Observaciones:</td>
                    <td>@Model.Alumno.Observaciones. </td>
                </tr>
            </table>
        </div>
        <hr class="col-md-12" />
        <div class="col-md-12">
            <h3>Seleccione el curso a inscribir al alumno</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Turno</th>
                        <th>Sede</th>
                        <th>Coordinador</th>
                        <th>Tipo</th>
                        <th class="text-center">Version<br />Año/edición</th>
                        <th>Precio</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @*@foreach (var item in Model.Cursos)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Turno</td>
                                <td>@item.Sede.ToString().Replace("_", " ")</td>
                                <td>@item.Coordinador.ToString().Replace("_", " ")</td>
                                <td>@item.TipoCurso</td>
                                <td class="text-center">@item.Version</td>
                                <td>$ @string.Format("{0:n0}", item.Precio)</td>
                                <td>
                                    <button type="button" data-precio="@item.Precio" class="btn btn-info inscribir" data-toggle="modal" data-target="#myModal">Inscribir</button>
                                </td>
                            </tr>
                        }*@

                </tbody>
            </table>
        </div>


        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Inscripción de alumno</h4>
                    </div>
                    @using (Html.BeginForm("FinalizarInscripcion", "Alumno", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="modal-body">
                            <p>Ingrese los últimos datos para la inscripción:</p>
                            @*@Html.HiddenFor(x => x.)*@
                            @*<table class="table">
                                    <tr>
                                        <td>Monto que abonará:</td>
                                        <td>@Html.TextBoxFor(x => x.MontoAAbonar, new { @class = "form-control", @id = "montoaabonar" })</td>
                                    </tr>
                                    <tr>
                                        <td>Observaciones:</td>
                                        <td>@Html.TextAreaFor(x => x.ObservacionesDelCurso, new { @class = "form-control" })</td>
                                    </tr>
                                </table>*@
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-success">Inscribir</button>
                        </div>
                    }
                </div>

            </div>
        </div>
    }
</div>




<script>
    $(function () {
        $('.inscribir').click(function () {
            $('#montoaabonar').val($(this).data("precio"));
        });
    });
</script>