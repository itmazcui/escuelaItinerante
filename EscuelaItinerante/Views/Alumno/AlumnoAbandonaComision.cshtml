@model EscuelaItinerante.Models.AlumnoAbandonaComisionViewModel
@{
    ViewBag.Title = "Desinscripción de alumno";
}
<h2>@ViewBag.Title.</h2>
@*<h4 class="text-success">@ViewBag.Message</h4>*@


@if (Model.Alumno == null)
{
    <div class="col-md-6 col-lg-offset-3 well">
        @using (Html.BeginForm("AlumnoAbandonaComision", "Alumno", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
        {

            <h4 class="mt20">Ingrese el DNI del alumno que desea desinscribir.</h4>

            <div class="text-danger">
                @Html.ValidationSummary()
            </div>

            <div>
                @Html.TextBoxFor(x => x.NroDocumento, new { @type = "number", @class = "form-control", @placeholder = "Nro. Documento", @Value = Model.NroDocumento == 0 ? "" : Model.NroDocumento.ToString() })
            </div>

            <div class="mt20 text-right">
                <input type="submit" class="btn btn-success" value="Buscar" id="buscar" />
            </div>
        }
    </div>
}
else
{
    <div class="container">
        <div class="col-md-4 col-md-offset-4">
            @Html.Partial("~/Views/Alumno/Partial/AlumnoTabla.cshtml", Model.Alumno)
        </div>
        <hr class="col-md-12" />
        <div class="col-md-12">
            <div id="desinscripcioncorrecta" class="hidden">
                <div class="alert alert-success">
                    <strong>Éxito!</strong> El alumno ha sido desinscripto de manera exitosa.
                </div>
            </div>
            <div id="desinscripcionerror" class="hidden">
                <div class="alert alert-warning">
                    <strong>Inscripción no permitida:</strong> No se ha podido desinscribir al alumno.
                </div>
            </div>
            <h3>Seleccione el curso a inscribir al alumno</h3>
            <table class="table table-striped datatable vamiddle">
                <thead>
                    <tr>
                        <th>Comisión</th>
                        <th>Curso</th>
                        <th>Coordinador</th>
                        <th>Modalidad</th>
                        <th>Turno</th>
                        <th>Arancel</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Comisiones)
                    {
                        <tr>
                            <td>
                                @item.IdComision
                            </td>
                            <td>
                                @item.Curso.ToString().Replace("_", " ")
                            </td>
                            <td>
                                @item.Coordinador.ToString().Replace("_", " ")
                            </td>
                            <td>
                                @item.Modalidad
                            </td>
                            <td>
                                @item.Turno
                            </td>
                            <td>
                                @item.Arancel.ToString("C2")
                            </td>
                            <td>
                                @if (item.EstadoCursada == DES.Data.Clases.EstadoCursada.Cursando)
                                {
                                    <button type="button" data-idcomision="@item.IdComision" class="btn btn-danger desinscribir">Desinscribir</button>
                                }
                                else
                                {
                                    @item.EstadoCursada.ToString()
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>



    <script>
            $(function () {
                var idAlumno = @Model.Alumno.IdAlumno;

                $('.desinscribir').click(function () {
                    if (window.confirm("Está a punto de desinscribir a un alumno.")) {
                        var idComision = 0;
                        $.ajax({
                            type: 'POST',
                            url: '@Url.Action("AlumnoAbandonaComision", "Alumno")',
                            data: {
                                idalumno: idAlumno,
                                idcomision: $(this).data("idcomision")
                            },
                            success: function (bajaexitosa) {
                                window.scrollTo(0, 0);
                                if (bajaexitosa) {
                                    location.reload();
                                }
                                else {
                                    alert("No se ha podido dar de baja el alumno");
                                }
                            }
                        });
                    }
                });

            });
    </script>

}
